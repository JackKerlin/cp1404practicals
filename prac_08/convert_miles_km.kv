BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.handle_conversion(input_miles.text)
            text: ''
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1.0)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1.0)
    # Button:
        # text: 'Convert miles to km'
        # on_press: app.handle_conversion(input_miles.text)
    Label:
        id: output_label
